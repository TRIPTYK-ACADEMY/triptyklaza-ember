<div class="form-container">
  <h1>Create new entry</h1>
  <form action="">
    <section>
      <div class="field">
        <p>
          <label for="title">Title</label>
          <input type="text" id="title" name="title" placeholder="Enter here the title of the video">
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
      <div class="field">
        <p>
          <label for="year">Year</label>
          <input type="text" id="year" name="year" placeholder="Release year">
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
      <div class="field">
        <p>
          <label for="pgrating">PG Rating</label>
          <input type="text" id="pgrating" name="pgrating" placeholder="Ex: 16+">
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
      <div class="field">
        <p>
          <label for="duration">Duration</label>
          <input type="text" id="duration" name="duration" placeholder="Ex: 3 Seasons  or 1h 34min">
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
      <div class="field">
        <p>
          <label for="synopsis">Synopsis</label>
          <textarea name="synopsis" id="synopsis" cols="30" rows="10"></textarea>
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
    </section>

    <section>
      <div class="field">
        <p>
          <label for="category">Category</label>
          <select name="category" id="category">
            <option value="Movie">Movie</option>
            <option value="Series">Series</option>
            <option value="Documentary">Documentary</option>
          </select>
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
      <div class="field">
        <p>
          <label for="genre">Genre</label>
          <select name="genre" id="genre">
            <option value="1365">Action & Adventure</option>
            <option value="7424">Anime</option>
            <option value="3652">Biographical Documentaries</option>
            <option value="783">Children & Family Movies</option>
            <option value="31574">Classic Movies</option>
            <option value="6548">Comedies</option>
            <option value="9875">Crime</option>
            <option value="7627">Cult </option>
            <option value="5763">Dramas</option>
            <option value="7462">Foreign Movies</option>
            <option value="5349">Historical</option>
            <option value="8711">Horror Movies</option>
            <option value="7077">Independent</option>
            <option value="90361">Music</option>
            <option value="26835">Religious & Spirituality</option>
            <option value="8883">Romantic</option>
            <option value="1492">Sci-Fi & Fantasy</option>
            <option value="4370">Sports</option>
            <option value="8933">Thrillers</option>

          </select>
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
      <div class="field">
        <p>
          <label for="url">Vid√©o Link</label>
          <input type="url" id="url" name="url"
            placeholder="ex: https://www.imdb.com/title/tt7713068/videoplayer/vi1837416217">
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
      <div class="field">
        <p>
          <label for="logo">Logo</label>
          <input type="file" id="logo" name="logo">
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
      <div class="field">
        <p>
          <label for="thumbnail">Thumbnail</label>
          <input type="file" id="thumbnail" name="thumbnail">
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
      <div class="field">
        <p>
          <label for="largeimage">Image</label>
          <input type="file" id="largeimage" name="largeimage">
        </p>
        <span class="error-message">Erreur machin</span>
      </div>
      <p>
        <a href="dashboard.html" class="submit">Submit</a>
      </p>

    </section>
  </form>
</div>